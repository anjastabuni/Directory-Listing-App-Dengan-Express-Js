<% layout('layouts/app') %>
<h1 class="text-xl mb-4">Update Place</h1>
<div class="max-w-md">
  <form action="/places/<%= place._id %>?_method=put" method="post">
    <div class="grid grid-cols-1 gap-x-6 gap-y-8">
      <div class="sm:col-span-3">
        <label for="title">Title</label>
        <div class="mt-2">
          <input type="text" class="block w-full bg-white rounded-md px-3 py-1.5 text-base bg-gray-900 outline-1" name="place[title]" id="title" value="<%= place.title %>" />
        </div>
      </div>
      <div class="sm:col-span-3">
        <label for="location">Location</label>
        <div class="mt-2">
          <input type="text" class="block w-full bg-white rounded-md px-3 py-1.5 text-base bg-gray-900 outline-1" name="place[location]" id="location" value="<%= place.location %>" />
        </div>
      </div>
      <div class="sm:col-span-3">
        <label for="price">Price</label>
        <div class="mt-2">
          <input type="text" class="block w-full bg-white rounded-md px-3 py-1.5 text-base bg-gray-900 outline-1" name="place[price]" id="price" value="<%= place.price %>" />
        </div>
      </div>
      <div class="sm:col-span-3">
        <div class="mt-2">
          <button type="submit" class="block w-full bg-indigo-600 rounded-md px-3 py-2 text-sm font-semibold text-white">Save</button>
        </div>
      </div>
    </div>
  </form>
</div>
