<% layout('layouts/app') %>
<div class="max-w-md">
  <div>
    <h1 class="text-xl font-semibold mb-1"><%= place.title %></h1>
    <h2 class="text-base"><%= place.location %></h2>
    <img src="<%= place.image %>" alt="" />
    <p class="text-sm"><%= place.description %></p>
  </div>
  <div class="flex items-center mt-5">
    <div class="me-2">
      <form action="/places/<%= place._id %>?_method=DELETE" method="post" style="display: inline !important">
        <button class="bg-red-400 px-2 py-1 rounded-md" type="submit">Delete</button>
      </form>
    </div>
    <div class="me-2">
      <a href="/places/<%= place._id %>/edit" class="bg-yellow-400 px-2 py-1 rounded-md">Edit</a>
    </div>
    <div class="me-2">
      <a href="/places" class="px-2 py-1 outline-1 rounded-md">All Places</a>
    </div>
  </div>
</div>
